<h1 class="d-flex justify-content-center mb-3">Shopping cart</h1>

<nav aria-label="breadcrumb">
  <ol class="breadcrumb">
    <li class="breadcrumb-item"><a href="/shop">Shop</a></li>
    <li class="breadcrumb-item active" aria-current="page">Shopping cart</li>
  </ol>
</nav>

<table class="table table-bordered table-striped">

  <thead class="thead-dark">
    <tr>
      <th scope="col">Product</th>
      <th scope="col">Manufacturer</th>
      <th scope="col">Price ($)</th>
      <th scope="col" class="text-center">Action</th>
    </tr>
  </thead>

  <tbody>

    {{#each rows}}
    <tr>
      <td>{{this.food_name}}</td>
      <td>{{this.food_manufacturer}}</td>
      <td>{{this.food_price}}</td>
      <td class="text-center">
        <a href="shopping_cart_delete/{{this.id}}" type="button" class="btn btn-danger btn-small"><i
            class="bi bi-trash"></i> Delete</a>
      </td>
      {{/each}}

  </tbody>
</table>



<form action="/order_sent" method="POST">

  <div class="form-group mb-3">
    <label class="mb-2" for="exampleFormControlSelect1">Type of payment</label>
    <select class="form-control" id="order_pay_type" name="order_pay_type">
      <option>Cash (when courier arrives)</option>
      <option>Credit card (right now)</option>
      <option>Credit cart (when courier arrives)</option>
    </select>
  </div>

  <div class="row pb-2">
    <div class="col-6"></div>
    <div class="col-6 d-flex justify-content-end">
      <button type="submit" class="btn btn-success btn-small aligh-self-center"><i class="bi bi-cart-check"></i>
        Purchase</button>
    </div>
  </div>
</form>