{{#if success_buy}}
<!-- HBS -->
<div class="alert alert-success alert-dismissible fade show" role="alert">
  {{success_buy}}
  <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
</div>
{{/if}}

<h1 class="d-flex justify-content-center mb-3">Start getting your groceries!</h1>

<div class="container">
  <div class="row d-flex justify-content-center">
{{#each rows}}
<div class="col-4">
  <div class="card mx-5 mt-5 col" style="width: 18rem;">
    <img class="card-img-top " src="bread.jpg" alt="Card image cap">
    <div class="card-body">
      <h5 class="card-title">{{this.category_name}}</h5>
      <p class="card-text">{{this.category_desc}}</p>
      <a href="/getproduct/{{this.category_name}}" class="btn btn-primary">Go to</a>
    </div>
  </div>
</div>
{{/each}}
</div>
</div>
