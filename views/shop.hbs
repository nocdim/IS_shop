<h1 class="d-flex justify-content-center mb-3">Start getting your groceries!</h1>

<div class="container">
  <div class="row">
{{#each rows}}
<div class="col-4">
  <div class="card mx-5 mt-5" style="width: 18rem; min-height: 600px; max-height: 1000px">
    <img class="card-img-top" style="width: 18rem" src="{{this.category_image_link}}" alt="{{this.category_alt}}">
    <div class="card-body">
        <h5 class="card-title">{{this.category_name}}</h5>
        <p class="card-text ">{{this.category_desc}}</p>
    </div>
        <a href="/getproduct/{{this.category_name}}" class="btn btn-primary d-block ">Go to</a>
  </div>
</div>
{{/each}}
</div>
</div>
