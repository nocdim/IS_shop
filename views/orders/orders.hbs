<h1 class="d-flex justify-content-center mb-3">Client orders</h1>


<nav aria-label="breadcrumb">
  <ol class="breadcrumb">
    <li class="breadcrumb-item"><a href="/products">Main</a></li>
    <li class="breadcrumb-item active" aria-current="page">Client orders</li>
  </ol>
</nav>

{{#each rows}}

<div class="accordion accordion-flush" id="accordionExample">
  <div class="accordion-item border border-seccondary">
    <h2 class="accordion-header" id="flush-headingOne">

      <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse"
        data-bs-target="#flush-collapse{{this.order_id}}" aria-expanded="false"
        aria-controls="flush-collapse{{this.order_id}}">
        Order#{{this.order_id}}
      </button>
    </h2>
    <div id="flush-collapse{{this.order_id}}" class="accordion-collapse collapse"
      aria-labelledby="flush-heading{{this.order_id}}" data-bs-parent="#accordionFlushExample">
      <div class="accordion-body">
        <table class="table table-bordered table-striped">

          <thead class="thead-dark">
            <tr>
              <th class="col-2">Client's email</th>
              <th class="col-3">Products</th>
              <th class="col-1">Price ($)</th>
              <th class="col-2">Order date</th>
              <th class="col-2">Type of payment</th>
            </tr>
          </thead>


          <tbody>
            <tr>
              <td>{{this.user_email}}</td>
              <td>{{this.products}}</td>
              <td>{{this.price}}</td>
              <td>{{this.order_date}}</td>
              <td>{{this.order_pay_type}}</td>
          </tbody>
        </table>

      </div>
    </div>
  </div>
  {{/each}}